{
  "name": "code-workshop-kit",
  "version": "0.3.1",
  "description": "",
  "repository": "https://github.com/code-workshop-kit/cwk-frontend",
  "main": "./dist/index.js",
  "bin": {
    "cwk": "./dist/cli.js"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "build": "rimraf dist && babel src --out-dir dist --copy-files",
    "start": "yarn build && ./copy-components && node dist/cli.js run --watch --app-index demo/index.html",
    "start:scaffold": "yarn build && node dist/cli.js scaffold --root-dir demo",
    "start:scaffold:force": "yarn build && node dist/cli.js scaffold --force --root-dir demo",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "release": "standard-version --tag-prefix="
  },
  "keywords": [
    "workshop",
    "frontend",
    "dev server"
  ],
  "files": [
    "dist"
  ],
  "author": "Joren Broekema <joren.broekema@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/preset-env": "^7.9.0",
    "@open-wc/eslint-config": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "prettier": "^2.0.5",
    "standard-version": "^7.0.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "@open-wc/create": "^0.31.0",
    "command-line-args": "^5.1.1",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.45.1",
    "esm": "^3.2.25",
    "glob": "^7.1.6",
    "is-plain-object": "^3.0.0",
    "lit-element": "^2.2.1",
    "lit-html": "^1.2.1",
    "ws": "^7.2.5"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
