{
  "name": "code-workshop-kit",
  "version": "0.2.2",
  "description": "",
  "repository": "https://github.com/code-workshop-kit/cwk-frontend",
  "type": "module",
  "main": "index.js",
  "bin": {
    "cwk": "./src/cli.js"
  },
  "engines": {
    "node": ">=13.0.0"
  },
  "scripts": {
    "start": "./copy-components && node src/cli.js run --watch --app-index demo/index.html",
    "start:scaffold": "node src/cli.js scaffold --root-dir demo",
    "start:scaffold:force": "node src/cli.js scaffold --force --root-dir demo",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "release": "standard-version --tag-prefix="
  },
  "keywords": [
    "workshop",
    "frontend",
    "dev server"
  ],
  "author": "Joren Broekema <joren.broekema@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@open-wc/eslint-config": "^2.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "prettier": "^2.0.5",
    "standard-version": "^7.0.0"
  },
  "dependencies": {
    "@open-wc/create": "^0.30.0",
    "command-line-args": "^5.1.1",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.45.1",
    "glob": "^7.1.6",
    "is-plain-object": "^3.0.0",
    "lit-element": "^2.2.1",
    "lit-html": "^1.2.1",
    "ws": "^7.2.5"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
